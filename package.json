{
  "name": "podcasts-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "Marcos Corsi <marcosvcorsi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsnd --inspect --transpile-only --ignore-watch node_modules --respawn src/server.ts",
    "test": "jest --silent --noStackTrace --passWithNoTests --runInBand --detectOpenHandles",
    "test:debug": "jest --passWithNoTests --runInBand",
    "test:staged": "yarn test --findRelatedTests",
    "test:cov": "yarn test --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/mongoose": "^5.10.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.12.5"
  }
}
